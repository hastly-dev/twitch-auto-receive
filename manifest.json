{
    "manifest_version": 3,
    "name": "Twitch Auto Receive Extension",
    "description": "Automating the collection of channel points for watching on twitch.",
    "version": "1.0",
    "author": "Hastly_",
    "action": {
        "default_popup": "html/popup.html",
        "default_icon": "icons/icon-48.png",
        "default_title": "Twitch Auto Receive"
    },
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "content_scripts": [
        {
            "js": [
                "js/content.js"
            ],
            "matches": [
                "https://www.twitch.tv/*"
            ],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "activeTab",
        "storage"
    ],
    "background": {
        "service_worker": "js/background.js"
    }
}